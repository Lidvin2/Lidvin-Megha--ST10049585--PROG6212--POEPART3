@model Claim

<h2 class="text-center mb-4" style="color: aqua;">Edit Claim</h2>

<form asp-action="Update" class="mx-auto p-4 shadow rounded" style="max-width: 600px; background-color: #F5DEB3; border: 2px solid #8B4513;">




    <div class="form-group mb-4">
        <input type="hidden" asp-for="ClaimID" />
        <label for="ClaimDate" class="form-label fw-bold" style="color: #D2691E;">Claim Date</label>
        <input asp-for="ClaimDate" class="form-control" style="background-color: #FFF8DC; border: 1px solid #8B4513; color: #8B4513;" />
        <span asp-validation-for="ClaimDate" class="text-danger"></span>
    </div>


    <div class="form-group mb-4">
        <label for="HoursWorked" class="form-label fw-bold" style="color: #D2691E;">Hours Worked</label>
        <input asp-for="HoursWorked" class="form-control" style="background-color: #FFF8DC; border: 1px solid #8B4513; color: #8B4513;" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="HourlyRate" class="form-label fw-bold" style="color: #D2691E;">Hourly Rate</label>
        <input asp-for="HourlyRate" class="form-control" style="background-color: #FFF8DC; border: 1px solid #8B4513; color: #8B4513;" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>


    <div class="d-flex justify-content-between">
        <button type="submit" class="btn" style="background-color: #CD853F; color: white; border: 1px solid #8B4513;">Save Changes</button>
        <a asp-action="Index" class="btn" style="background-color: #8B4513; color: white; border: 1px solid #8B4513;">Cancel</a>
    </div>
</form>